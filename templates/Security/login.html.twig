{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    {% for message in app.flashes('notice') %}
    <div class="alert alert-notice">
        {{ message }}
    </div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <div class="form-row justify-content-center">

    <label for="inputalias" class="sr-only">Alias</label>
    <input value="{{ last_username }}" name="alias" id="inputAlias" class="form-control" placeholder="Alias" required autofocus>
    </div>

    <div class="form-row justify-content-center">
    <label for="inputlogin" class="sr-only">Login</label>
    <input value="{{ last_username }}" name="login" id="inputlogin" class="form-control" placeholder="Login" required autofocus>
    </div>

    <div class="form-row justify-content-center">
    <label for="inputpassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputpassword" class="form-control" placeholder="Mot de passe" required>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
